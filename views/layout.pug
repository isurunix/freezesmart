doctype html
html(lang='en')
  head
    title=titlePrefix+'- FreezeSmart'
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    //- link(rel='stylesheet', href='./assets/css/bootstrap.min.css')
    link(href='http://maxcdn.bootstrapcdn.com/bootswatch/3.3.0/flatly/bootstrap.min.css' rel='stylesheet')
    if titlePrefix=="Login"
      link(rel='stylesheet', href='./assets/css/login.css')
    else
      link(rel='stylesheet', href='./assets/css/custom.css')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js')
    script(src='./assets/js/bootstrap.min.js')
  body
    nav.navbar.navbar-default
      .container-fluid
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='#myNavbar')
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='#') FreezSmart
        #myNavbar.collapse.navbar-collapse
          ul.nav.navbar-nav
            li.active
              a(href='/') Home
            li
              a(href='#') About
          ul.nav.navbar-nav.navbar-right
            li
              a(href='./login')
                span.glyphicon.glyphicon-log-in  Login

    block content
