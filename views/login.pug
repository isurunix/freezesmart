extends layout.pug

block content

  if status=='failed'
    .container.center.col-lg-4
        .alert.alert-danger.alert-dismissable(role='alert')
          button.close(type='button', data-dismiss='alert', aria-label='close')
            span(aria-hidden='true') &times;
          <strong>Login Failed! </strong> Username or Password incorrect

  .container.center(style='padding-top:5%;')
    .row
      #login.col-lg-6.center
        form#loginForm(action='login', method='post')
          .span7.text-center(style='padding-bottom:20px')
            h3 Login to your FreezSmart account
          input.form-control(required , autofocus , placeholder='Username', type='text', name='uname')
          br
          input.form-control(required type='password', placeholder='Password', name='pwd')
          br
          button.btn.btn-lg.btn-primary.btn-block.form-control(type='submit') Login
